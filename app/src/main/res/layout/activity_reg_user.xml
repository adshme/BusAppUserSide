<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wesleyan.bsit.busapp.reg_user"
    android:background="@drawable/background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >




            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:text="Sign Up"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />



<android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/til1"
                android:layout_below="@+id/textView20"
                android:layout_alignLeft="@+id/textView20"
                android:layout_alignStart="@+id/textView20">

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Username..."
        android:inputType="text"
        android:textColorHint="#000000"
 />

</android.support.design.widget.TextInputLayout>


<android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/til2"
                android:layout_below="@+id/til1"
                android:layout_alignLeft="@+id/til1"
                android:layout_alignStart="@+id/til1">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Password..."
                    android:inputType="textPassword"
                    android:textColorHint="#000000"/>
</android.support.design.widget.TextInputLayout>



<android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/til3"
                android:layout_below="@+id/til2"
                android:layout_alignLeft="@+id/til2"
                android:layout_alignStart="@+id/til2">

                <EditText
                    android:id="@+id/CPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Confirm Password..."
                    android:inputType="textPassword"
                    android:textColorHint="#000000"/>

</android.support.design.widget.TextInputLayout>


<android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/til4"
                android:layout_below="@+id/til3"
                android:layout_alignLeft="@+id/til3"
                android:layout_alignStart="@+id/til3">

                <EditText
                    android:id="@+id/Fname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView25"
                    android:ems="10"
                    android:hint="Firstname Middle Initial Surname"
                    android:inputType="text"
                    android:textColorHint="#000000"/>
</android.support.design.widget.TextInputLayout>



<android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/til5"
                android:layout_below="@+id/til4"
                android:layout_alignLeft="@+id/til4"
                android:layout_alignStart="@+id/til4">


                <EditText
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView30"
                    android:ems="10"
                    android:hint="Age..."
                    android:inputType="text"
                    android:textColorHint="#000000"/>
</android.support.design.widget.TextInputLayout>



            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/til5"
                android:layout_alignStart="@+id/til5"
                android:layout_below="@+id/til5"
                android:text="Gender"
                android:textSize="20sp" />

<RadioGroup
                android:id="@+id/Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView31"
                android:layout_alignStart="@+id/textView31"
                android:layout_below="@+id/textView31">

                <RadioButton
                    android:id="@+id/Gmale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Male"
                    android:textAllCaps="true" />

                <RadioButton
                    android:id="@+id/Gfemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female" />
</RadioGroup>




<android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/til6"
                android:layout_below="@+id/Gender"
                android:layout_alignLeft="@+id/Gender"
                android:layout_alignStart="@+id/Gender">

                <EditText
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView33"
                    android:ems="10"
                    android:hint="Contact..."
                    android:inputType="text"
                    android:textColorHint="#000000"/>
</android.support.design.widget.TextInputLayout>



<android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/til7"
                android:layout_below="@+id/til6"
                android:layout_alignLeft="@+id/til6"
                android:layout_alignStart="@+id/til6">
            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Address"
                android:inputType="text"
                android:textColorHint="#000000"/>

 </android.support.design.widget.TextInputLayout>


<android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/til8"
    android:layout_alignTop="@+id/Gender"
    android:layout_toRightOf="@+id/textView20"
    android:layout_toEndOf="@+id/textView20"
    android:layout_marginLeft="25dp"
    android:layout_marginStart="25dp">


    <EditText
        android:id="@+id/bday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Gender"
        android:layout_toEndOf="@+id/textView20"
        android:layout_toRightOf="@+id/textView20"
        android:ems="10"
        android:hint="Birthday"
        android:inputType="text"
        android:textColorHint="#000000"/>


</android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/sign"
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:background="@color/colorAccent"
                android:text="Sign Up"
                android:textColor="#ffffff"
                android:layout_below="@+id/til7"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"/>

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
